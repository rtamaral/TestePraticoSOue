@model Usuario

<h1>Cadastro</h1>
<h4>Você está a um passo de criar sua conta Training Banking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (TempData["Sucesso"] != null)
        {
            <p class="alert alert-success">@TempData["Sucesso"]  <a asp-action="LoginUsuario">Clique para fazer o login</a></p>
        }
        @if (TempData["Falhou"] != null)
        {
            <p class="alert alert-danger">@TempData["Falhou"]</p>
        }
            <form asp-action="RegistrarUsuario">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @*<label asp-for="Cpf" class="control-label"></label>*@
                    <input asp-for="Cpf" class="form-control" maxlength="11" placeholder="CPF"/>
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="Senha" class="control-label"></label>*@
                    <input asp-for="Senha" class="form-control" placeholder="Senha"/>
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="Nome" class="control-label"></label>*@
                    <input asp-for="Nome" class="form-control" placeholder="Nome"/>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="Email" class="control-label"></label>*@
                    <input asp-for="Email" class="form-control" maxlength="50" onblur="validacaoEmail(f1.email)" placeholder="Email"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="Telefone" class="control-label"></label>*@
                    <input asp-for="Telefone" class="form-control" id="telefone" maxlength="15" placeholder="Telefone"/>
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="Endereco" class="control-label"></label>*@
                    <input asp-for="Endereco" class="form-control" placeholder="Endereço"/>
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Registar Usuário" class="btn btn-default btn-primary" />
                </div>
            </form>
    </div>
</div>
<div>
    <a asp-action="LoginUsuario">Retornar para o Login</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

